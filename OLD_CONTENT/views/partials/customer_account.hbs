<h1 class="title">Customer Accounts</h1>

<table id="customer-accounts-table">
    <thead>
        <tr>
            <th>Junction ID</th>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Account Name</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        {{#each results}}
            <tr>
                <td>{{this.jxnID}}</td>
                <td>{{this.customerID}}</td>
                <td>{{this.fname}}</td>
                <td>{{this.lname}}</td>
                <td>{{this.name}}</td>
                <td>{{this.balance}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>
