<h1 class="title">Transactions</h1>

<table id="transactions-table">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Amount</th>
            <th>Timestamp</th>
            <td>Source ID</td>
            <td>Destination ID</td>
            <td>Status</td>
        </tr>
    </thead>
    <tbody>
        {{#each transactions}}
            <tr>
                <td>{{this.transactionID}}</td>
                <td>{{this.amount}}</td>
                <td>{{this.tstamp}}</td>
                <td>{{this.sourceID}}</td>
                <td>{{this.destID}}</td>
                <td>{{this.statusID}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<!-- Add Transaction Form -->
<h2>Add Transaction</h2>
<form id="add-form">
    <label for="transactionID">Transaction ID:</label>
    <input type="number" id="add-transactionID-input" name="transactionID" required>

    <label for="amount">Amount:</label>
    <input type="number" id="add-amount-input" name="amount" required>

    <label for="tstamp">Timestamp:</label>
    <input type="datetime-local" id="add-tstamp-input" name="tstamp" required>

    <label for="sourceID">Source ID:</label>
    <input type="number" id="add-sourceID-input" name="sourceID" required>

    <label for="destID">Destination ID:</label>
    <input type="number" id="add-destID-input" name="destID" required>

    <label for="statusID">Status ID:</label>
    <input type="number" id="add-statusID-input" name="statusID" required>

    <button type="button" id="add-cancel-input">Cancel</button>
    <input type="submit" id="add-confirm-input" value="Submit">
</form>

<!-- Edit Transaction Form -->
<h2>Edit Transaction</h2>
<form id="edit-form">
    <label for="transactionID">Transaction ID:</label>
    <input type="number" id="edit-transactionID-input" name="transactionID" required>

    <label for="amount">Amount:</label>
    <input type="number" id="edit-amount-input" name="amount" required>

    <label for="tstamp">Timestamp:</label>
    <input type="datetime-local" id="edit-tstamp-input" name="tstamp" required>

    <label for="sourceID">Source ID:</label>
    <input type="number" id="edit-sourceID-input" name="sourceID" required>

    <label for="destID">Destination ID:</label>
    <input type="number" id="edit-destID-input" name="destID" required>

    <label for="statusID">Status ID:</label>
    <input type="number" id="edit-statusID-input" name="statusID" required>

    <button type="button" id="edit-cancel-input">Cancel</button>
    <input type="submit" id="edit-confirm-input" value="Submit">
</form>

<!-- Delete Transactin Form -->
<h2>Delete Transaction</h2>
<form id="delete-form">
    <label for="transactionID">Transaction ID:</label>
    <input type="number" id="delete-transactionID-input" name="transactionID" required>

    <button type="button" id="delete-cancel-input">Cancel</button>
    <input type="submit" id="delete-confirm-input" value="Submit">
</form>

<!-- Include script file -->
<script src="/js/transactions.js"></script>
