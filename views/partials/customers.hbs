<h1 class="title">Customers</h1>

<table id="customers-table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>SSN</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        {{#each customers}}
            <tr>
                <td>{{this.customerID}}</td>
                <td>{{this.fname}}</td>
                <td>{{this.lname}}</td>
                <td>{{this.email}}</td>
                <td>{{this.ssn}}</td>
                <td>{{this.addr}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<!-- Add Customer Form -->
<h2>Add Customer</h2>
<form id="add-form">
    <label for="customerID">Customer ID:</label>
    <input type="number" id="add-customerID-input" name="customerID" required>

    <label for="fname">First Name:</label>
    <input type="text" id="add-fname-input" name="fname" required>

    <label for="lname">Last Name:</label>
    <input type="text" id="add-lname-input" name="lname" required>

    <label for="email">Email:</label>
    <input type="email" id="add-email-input" name="email" required>

    <label for="ssn">SSN:</label>
    <input type="text" id="add-ssn-input" name="ssn" required>

    <label for="addr">Address:</label>
    <input type="text" id="add-addr-input" name="addr" required>

    <button type="button" id="add-cancel-input">Cancel</button>
    <input type="submit" id="add-confirm-input" value="Submit">
</form>

<!-- Edit Customer Form -->
<h2>Edit Customer</h2>
<form id="edit-form">
    <label for="customerID">Customer ID:</label>
    <input type="number" id="edit-customerID-input" name="customerID" required>

    <label for="fname">First Name:</label>
    <input type="text" id="edit-fname-input" name="fname">

    <label for="lname">Last Name:</label>
    <input type="text" id="edit-lname-input" name="lname">

    <label for="email">Email:</label>
    <input type="email" id="edit-email-input" name="email">

    <label for="ssn">SSN:</label>
    <input type="text" id="edit-ssn-input" name="ssn">

    <label for="addr">Address:</label>
    <input type="text" id="edit-addr-input" name="addr">

    <button type="button" id="edit-cancel-input">Cancel</button>
    <input type="submit" id="edit-confirm-input" value="Submit">
</form>

<!-- Delete Customer Form -->
<h2>Delete Customer</h2>
<form id="delete-form">
    <label for="customerID">Customer ID:</label>
    <input type="number" id="delete-customerID-input" name="customerID" required>

    <button type="button" id="delete-cancel-input">Cancel</button>
    <input type="submit" id="delete-confirm-input" value="Submit">
</form>

<!-- Include script file -->
<script src="/js/customers.js"></script>
