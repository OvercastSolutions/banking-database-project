{{> header }}

<!-- Render Transactions table -->
<table>
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Amount</th>
            <th>Timestamp</th>
            <th>Source ID</th>
            <th>Destination ID</th>
            <th>Status ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="transactionTableBody">
        {{#each transactions}}
        <tr>
            <td>{{this.transactionID}}</td>
            <td>{{this.amount}}</td>
            <td>{{this.tstamp}}</td>
            <td>{{this.sourceID}}</td>
            <td>{{this.destID}}</td>
            <td>{{this.statusID}}</td>
            <td>
                <form action="/transactions/{{this.transactionID}}?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
                <button class="edit-btn">Edit</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- Create Transaction Form -->
<form action="/transactions" method="POST">
    <label for="amount">Amount</label>
    <input type="number" id="amount" name="amount" required>
    <label for="sourceID">Source ID</label>
    <input type="number" id="sourceID" name="sourceID" required>
    <label for="destID">Destination ID</label>
    <input type="number" id="destID" name="destID" required>
    <label for="statusID">Status ID</label>
    <input type="number" id="statusID" name="statusID" required>
    <button type="submit">Create Transaction</button>
</form>

<!-- Update Transaction Form -->
<form action="/transactions/:id?_method=PUT" method="POST" id="updateForm">
    <label for="amount">Amount</label>
    <input type="number" id="updateAmount" name="amount" required>
    <label for="sourceID">Source ID</label>
    <input type="number" id="updateSourceID" name="sourceID" required>
    <label for="destID">Destination ID</label>
    <input type="number" id="updateDestID" name="destID" required>
    <label for="statusID">Status ID</label>
    <input type="number" id="updateStatusID" name="statusID" required>
    <input type="hidden" id="transactionId" name="id" required>
    <button type="submit">Update Transaction</button>
</form>

{{> footer }}

<script>
    const transactionRows = document.querySelectorAll('#transactionTableBody tr');
    const updateAmount = document.getElementById('updateAmount');
    const updateSourceID = document.getElementById('updateSourceID');
    const updateDestID = document.getElementById('updateDestID');
    const updateStatusID = document.getElementById('updateStatusID');
    const transactionId = document.getElementById('transactionId');
    const updateForm = document.getElementById('updateForm');

    transactionRows.forEach(row => {
        const editButton = row.querySelector('.edit-btn');
        editButton.addEventListener('click', () => {
            const transactionID = row.children[0].innerText;
            const amount = row.children[1].innerText;
            const sourceID = row.children[3].innerText;
            const destID = row.children[4].innerText;
            const statusID = row.children[5].innerText;

            updateAmount.value = amount;
            updateSourceID.value = sourceID;
            updateDestID.value = destID;
            updateStatusID.value = statusID;
            transactionId.value = transactionID;

            updateForm.action = "/transactions/" + transactionID + "?_method=PUT";
        });
    });
</script>
